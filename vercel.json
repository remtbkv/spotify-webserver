{
    "builds": [
        {
            "src": "api/app.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/public/static/$1",
            "headers": { "cache-control": "public, max-age=3600, stale-while-revalidate=86400" }
        },
        {
            "src": "(.*)",
            "dest": "api/app.py"
        },
        {
            "src": "api/(.*)",
            "headers": {"Access-Control-Allow-Origin": "*"},
            "continue": true
        }
    ]
}
